    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Built-in server with debug",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:9003"
            ],
            "program": "",
            "cwd": "${workspaceRoot}/www",
            "port": 9000,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        },
        {
            "name": "Launch Built-in server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-c",
                "-c /workspaces/app/.config/php.ini-development"
            ],
            "program": "",
            "cwd": "${workspaceRoot}/www",
            "port": 8080,
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        }
    ]
}